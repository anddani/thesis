<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.algo.benchmarkapp.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/title_text" />

    <EditText
        android:id="@+id/edt_field"
        android:layout_below="@+id/sample_text"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/run_button"
        android:layout_below="@+id/edt_field"
        android:text="@string/run_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:background="@drawable/border"
        android:id="@+id/log_text"
        android:text="@string/log_title"
        android:layout_below="@+id/run_button"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</RelativeLayout>
